
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Arbitra Valuation Certificate Schema",
  "description": "Schema for the official valuation certificate generated by the Konkred Audit Protocol.",
  "type": "object",
  "required": [
    "id",
    "timestamp",
    "promptMetadata",
    "valuationResults",
    "overallRating",
    "signatures",
    "verificationUrl"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique Certificate ID (UUID or Watermark Hash)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of audit completion"
    },
    "verificationUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to the public verification page for this certificate"
    },
    "qrCode": {
      "type": "string",
      "description": "Data URI or URL for the QR code image linking to verification"
    },
    "promptMetadata": {
      "type": "object",
      "required": ["title", "hash", "author", "tokenCount"],
      "properties": {
        "title": { "type": "string", "description": "Title of the prompt asset" },
        "promptTitle": { "type": "string", "description": "Explicit title of the prompt asset for display" },
        "hash": { "type": "string", "description": "SHA-256 hash of the prompt content for integrity verification" },
        "author": { "type": "string", "description": "Creator or owner of the asset" },
        "industry": { "type": "string", "description": "Target industry vertical" },
        "tokenCount": { "type": "integer", "description": "Total token count of the prompt" },
        "version": { "type": "string", "description": "Version of the prompt asset" }
      }
    },
    "valuationResults": {
      "type": "object",
      "description": "Detailed results from the 6-protocol audit",
      "properties": {
        "DLA": {
          "type": "object",
          "description": "Differential Labor Arbitrage Results",
          "properties": {
            "netValue": { "type": "number", "description": "True Net Value per run (USD)" },
            "grossLaborValue": { "type": "number", "description": "Value of displaced manual labor (USD)" },
            "frictionCost": { "type": "number", "description": "Cost of AI operational friction (USD)" },
            "isProfitable": { "type": "boolean" },
            "arbitrageEfficiency": { "type": "number", "description": "Ratio of Net Value to Gross Labor Value" }
          }
        },
        "PVC": {
          "type": "object",
          "description": "Prompt Value Calculator Results",
          "properties": {
            "score": { "type": "number", "minimum": 0, "maximum": 100 },
            "grade": { "type": "string", "enum": ["S", "A", "B", "C", "D", "F"] },
            "breakdown": {
              "type": "object",
              "properties": {
                "goalClarity": { "type": "number" },
                "context": { "type": "number" },
                "specificity": { "type": "number" },
                "structure": { "type": "number" },
                "feasibility": { "type": "number" }
              }
            }
          }
        },
        "SCOPE": {
          "type": "object",
          "description": "S.C.O.P.E. Semantic Analysis",
          "properties": {
            "pvi": { "type": "number", "description": "Prompt Value Index" },
            "tier": { "type": "string" },
            "variables": {
              "type": "object",
              "properties": {
                "Structure": { "type": "number" },
                "Hardness": { "type": "number" },
                "Density": { "type": "number" },
                "Entropy": { "type": "number" },
                "TokenEfficiency": { "type": "number" }
              }
            }
          }
        },
        "PRICE": {
          "type": "object",
          "description": "P.R.I.C.E. Financial Asset Valuation",
          "properties": {
            "tav": { "type": "number", "description": "Total Asset Value (Annualized)" },
            "freelancePrice": { "type": "number", "description": "Recommended Freelance Fee (15% TAV)" },
            "marketplacePrice": { "type": "number", "description": "Recommended License Fee (2% TAV)" },
            "netSavingsPerRun": { "type": "number" }
          }
        },
        "VECTOR": {
          "type": "object",
          "description": "V.E.C.T.O.R. Viability System",
          "properties": {
            "qScore": { "type": "number", "description": "Reliability Coefficient (Q)" },
            "status": { "type": "string", "enum": ["VIABLE ASSET", "SCRAP ASSET", "NEEDS REVIEW"] },
            "netUtility": { "type": "number" },
            "correctionCost": { "type": "number" }
          }
        },
        "EAVP": {
          "type": "object",
          "description": "Empirical Asset Verification Protocol",
          "properties": {
            "verified": { "type": "boolean" },
            "auditValue": { "type": "number", "description": "Net audited value based on verified time savings" },
            "netMinutesSaved": { "type": "number" }
          }
        }
      }
    },
    "overallRating": {
      "type": "object",
      "properties": {
        "label": { "type": "string", "description": "Final verdict label (e.g., CERTIFIED ASSET)" },
        "score": { "type": "number", "minimum": 0, "maximum": 100 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1, "description": "AI Confidence level in the audit" }
      }
    },
    "signatures": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["role", "name", "date"],
        "properties": {
          "role": { "type": "string", "enum": ["Protocol Auditor", "Compliance Officer", "System Administrator"] },
          "name": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "signatureHash": { "type": "string", "description": "Cryptographic signature of the signer" }
        }
      }
    }
  }
}
